permissions:
  contents: write

jobs:
  use-app-token:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Create GitHub App token
        id: app-token
        uses: actions/create-github-app-token@v1
        with:
          app-id: ${{ secrets.APP_ID }}
          private-key: ${{ secrets.APP_PRIVATE_KEY }}
          installation-id: ${{ secrets.APP_INSTALLATION_ID }}

      - name: Use token
        env:
          GH_TOKEN: ${{ steps.app-token.outputs.token }}
        run: |
          git config --global user.name "VincentApp"
          git config --global user.email "vincent-app@users.noreply.github.com"
          git remote set-url origin https://x-access-token:${GH_TOKEN}@github.com/<vincent>/<repo>.git
          # push/pull/gh api with $GH_TOKEN ici
